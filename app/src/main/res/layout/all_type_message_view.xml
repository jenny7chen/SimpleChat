<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="MessageViewModel"
            type="com.seveneow.simplechat.viewmodel.MessageViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/message_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <RelativeLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@{MessageViewModel.textMessageBgResourceId}"
            android:padding="7dp"
            android:visibility="@{MessageViewModel.textMessageVisibility, default=gone}">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1.5dp"
                android:text="@{MessageViewModel.textMessage}"
                android:textColor="@{MessageViewModel.textColor}"
                android:textIsSelectable="true"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{MessageViewModel.imageMessageVisibility, default=gone}">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:image="@{MessageViewModel.imageMessageThumbnail}"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sticker_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{MessageViewModel.stickerMessageVisibility, default=gone}">

            <ImageView
                android:id="@+id/sticker_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
    </LinearLayout>
</layout>