<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/editor_bg"
    android:paddingTop="1dp">

    <EditText
        android:id="@+id/editor_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:focusableInTouchMode="true"
        android:maxLines="5"
        android:minHeight="50dp"
        android:minLines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/send_button"/>

    <RelativeLayout
        android:id="@+id/send_button"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/editor_send_btn_bg"
        android:minHeight="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/editor_text"
        app:layout_constraintLeft_toRightOf="@+id/editor_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editor_text"/>
</android.support.constraint.ConstraintLayout>


