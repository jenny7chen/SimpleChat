<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="RoomListViewModel"
            type="com.seveneow.simplechat.viewmodel.RoomListViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:visibility="@{RoomListViewModel.visibility}">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_color="@android:color/holo_blue_dark"
            app:civ_border_width="1dp"
            app:image="@{RoomListViewModel.avatarUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{RoomListViewModel.name}"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_view"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{RoomListViewModel.latestMessageText}"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:visibility="@{RoomListViewModel.textVisibility}"/>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>